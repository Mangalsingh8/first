<!--ajax cart drawer-->
<div class="ajax-cart__drawer js-ajax-cart-drawer  11">
  <div class="ajax-cart-drawer">
    <!--ajax cart drawer close-->
    <div class="cart_drawer_header">
      <span class="cart_heading">Your Shopping Bag</span>
    <span class="ajax-cart-drawer__close js-ajax-cart-drawer-close">x</span>
    </div>
    <div class="loader-cart">
    <i class="fa fa-spinner fa-spin icon-loader"></i>
    </div>
    {% render 'advance-cart-drawer-top' %}
    <!--end ajax cart drawer close-->

    <!--ajax cart drawer content-->
    <div class="ajax-cart-drawer__content js-ajax-cart-drawer-content"></div>
    <!--end ajax cart drawer content-->

    <!--ajax cart drawer buttons-->
    
    <div class="ajax-cart-drawer__buttons js-ajax-checkout-button">
     {% comment  %}
      <div class="delivery_status">
        <p>{{ settings.shipping_text }}</p>
        <p>Free Shipping on orders over Rs. 1500!</p>
      </div>
      
      <p style="text-align:center;font-weight: 700; margin: 8px 0!important;color: #000;">
      <span style="margin-right: 54px;">Subtotal: <span class="subtotal_price__subtotal"></span></span>
      </p>
      {% endcomment %}
<!--       <p class="Apply_coupon">Have a coupon! Apply at next step ?</p> -->
      <div class="footer__cart">
        
<!--         <div class="footer__payment_main">
          <h4>Payment Details</h4>
        </div> -->
        <div class="shipping__charge">
          <div class="shipping_txt" style="font-size: 14px">(+)&nbsp Shipping Charge	</div>
           <div class="shipping_txt_val" data-charge="{{settings.shipping_rate}}" data-limit="{{settings.cart_free_shipping_threshold}}">
              {% assign limit_for_free_shipping = settings.cart_free_shipping_threshold |times:100 | minus: cart.total_price %}
            {% if limit_for_free_shipping > 0 %}
            {{ settings.free_shipping_charge |times:100 |money_without_trailing_zeros}}
            {% else %}
            {{'Free'}}
            {% endif %}
           </div>
        </div>
        {% assign total_saving = 0 %}
        {% for item in cart.items %}
        {% if item.variant.compare_at_price > item.variant.price %}
        {% capture saving %}{{ item.variant.compare_at_price | minus: item.variant.price | times:item.quantity | divided_by: 100 | abs }}{% endcapture %}
        {% assign total_saving = saving | plus: total_saving %}
        {% endif %} 
        {% endfor %}

          <span class="additional_price_val">
              <span class="gift_wrap_'+itemPrice+'"style="color: #bf285e;font-size: 14px; padding-left: 15px;">(-)&nbsp 5% discount on online payment mode </span>
              <span id="additional_discount_price" style="color:black;">₹</span>
           </span>
        <div class="shipping__charge">
          <div class="total_saving" style="font-size: 14px">Savings</div>
          <div id="all_saving_value" cart_saving ></div>
<!--            <div class="total_saving_val">{{ total_saving }}</div> -->
       
        </div>


      <div class="shipping__charge order__total"><span>Order Total: <p id="tex__all">Inclusive of all tax</p></p></span><span class="subtotal_price__subtotal"></span>
      </div>
         <div class="ajax-cart-drawer__buttons_inner sec__cktout">
      {% comment %}  <a href="/cart/" class="button button_cart js-button">
          <span>Go to cart</span>
        </a>
        {% endcomment %}
        <a href="/checkout/" class="button button_checkout js-button" onclick="loader_hit()">
          <span>Confirm order</span>
        </a>
      </div>
      </div>
