  <div class="announcebar">
     {%for block-announcebar in section.blocks%}
        <div> {{ block-announcebar.settings.announce_text }} </div>
     {%endfor%}
  </div>

{% schema %}
  {
    "name": "Section name",
    "settings": [
      {
      "type": "color",
      "id": "color_title",
      "label": "Heading color",
      "default": "#FFFFFF"
     },  
      {
      "type": "color",
      "id": "background__color",
      "label": "Background color",
      "default": "#FFFFFF"
     }
    ],
    "blocks":[
      {
        "name":"announce",
        "type":"image",
		"settings": [
          {
            "id"   : "announce_text",
            "type" : "textarea",
            "label": "Text"
          }
      ]
  }
    ]
  }
{% endschema %}
<style>
  .announcebar{
    text-align:center;
    background-color:{{ section.settings.background__color }};
    color:{{ section.settings.color_title}};
  }
</style>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.3/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick.min.js"></script>
<script>
  	$(document).ready(function(){
			$('.announcebar').slick({
				dots: false,
				infinite: true,
				speed: 2000,
				slidesToShow: 1,
				slidesToScroll: 1,
				autoplay: true,
				autoplaySpeed: 1000,
				arrows: false
			
			});
		});

  
</script>

