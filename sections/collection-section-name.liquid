<h1>{{ section.settings.heading }}</h1>
  <div class="collection-use-slider">
    {% for block in section.blocks %}
      <a href="{{ block.settings.idname }}">
    <img class="img_block" src= "{{ block.settings.collection | img_url:' ' }}">
     <p class="text-slder"> {{block.settings.heading2 }}</p>
      </a>
    {% endfor %}
</div>

{% schema %}
  {
    "name": "Section name",
    "settings": [
      {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "Slider",
      "name": "collection.blocks",
      "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
        {
      "type": "text",
      "id": "heading2",
      "label": "Heading"
    },
     {
      "type": "url",
      "id": "idname",
      "label": "Button link"
  }
  ]
  }
],
   "presets":[
{
"name":"collection Slider",
"category":"collection"
}
] 
  }
{% endschema %}
<style>
  .collection-use-slider{
    width:100%;
    text-align: center;
  }
  .text-slder{
    text-align: center;
  }
  .slick-slide img {
    display: block;
    margin: 0 auto;
}
</style>
<script>
  $(document).ready(function(){
  $('.collection-use-slider').slick({
    slidesToScroll:1,
    slidesToShow: 4,
    autoplaySpeed:1000,
     autoplay: true,
    infinite: true,
    arrows:true
  });  
});
</script>